@page
@model StonksWebApp.Pages.Portfolio.NewPortfolioModel
@{
    ViewData["Title"] = "Create New Portfolio";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Create New Portfolio</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="portfolioName" class="form-label">Portfolio Name</label>
                    <input type="text" class="form-control" id="portfolioName" name="PortfolioName" required>
                </div>
                <div class="mb-3">
                    <label for="startingCapital" class="form-label">Starting Capital ($1000 - $1,000,000)</label>
                    <input type="number" class="form-control" id="startingCapital" name="StartingCapital" min="1000" max="1000000" step="1" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Create Portfolio</button>
                </div>
            </form>
        </div>
    </div>
</div>
