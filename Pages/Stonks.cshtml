@page
@model StonksWebApp.Pages.StonksModel
@{
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <h3>Search Tickers/Names</h3>
                <input type="text" class="form-control">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label for="slider-min" class="form-label">Market Cap</label>
                <div class="d-flex align-items-center">
                    <input type="range" id="slider-min" min="0" max="100" value="25" class="form-range me-2">
                    <input type="range" id="slider-max" min="0" max="100" value="75" class="form-range me-2">
                    <label class="me-2">Min:</label>
                    <input type="text" class="form-control me-2">
                    <label class="me-2">Max:</label>
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label for="sector-select" class="form-label">Sector:</label>
                <select id="sector-select" class="form-select"></select>
            </div>
        </div>
        <div class="row">
            <div class="col" id="searchListViewer">
                <!-- Search results will be displayed here -->
            </div>
        </div>
    </div>

    <script>
    const sliderMin = document.getElementById('slider-min');
    const sliderMax = document.getElementById('slider-max');

    sliderMin.addEventListener('input', updateSlider);
    sliderMax.addEventListener('input', updateSlider);

    function updateSlider() {
        const min = parseFloat(sliderMin.value);
        const max = parseFloat(sliderMax.value);

        if (min >= max) {
            sliderMin.value = max - 1;
        } else {
            sliderMax.value = Math.max(min + 1, max);
        }
    }
</script>
}
