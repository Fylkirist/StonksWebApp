@model StonksWebApp.models.StonkSearchModel[]

<style>
    .zebra-table {
        width: 100%;
        border-collapse: collapse;
    }

    .zebra-table th,
    .zebra-table td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    .zebra-table tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<table class="zebra-table">
    <thead>
    <tr>
        <th>Ticker</th>
        <th>Name</th>
        <th>Current Price</th>
        <th>Intraday Change</th>
        <th>Market Cap</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var stonk in Model)
    {
        var colour = stonk.PriceChange > 0 ? "green" : "red";
        <tr>
            <td><a asp-page="/Stonks/StonkDetails" asp-route-ticker="@stonk.Ticker">@stonk.Ticker</a></td>
            <td>@stonk.Name</td>
            <td>@stonk.CurrentPrice</td>
            <td style="color:@colour;">@stonk.PriceChange%</td>
            <td>@stonk.MarketCap</td>
        </tr>
    }
    </tbody>
</table>