@page "/Dashboard"
@model StonksWebApp.Pages.Dashboard.DashboardModel
@{

}
<div class="pt-3 pb-2 mb-3">
    <h1>Dashboard Content</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">
                        Your Portfolios
                    </div>
                    <div class="card-body">
                        <img hx-get="/Dashboard?handler=PortfolioList" hx-trigger="load" hx-swap="outerHTML" class="htmx-indicator" src="../spinner.gif" height="30" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">
                        Watchlist
                    </div>
                    <div class="card-body">
                        <img hx-get="/Dashboard?handler=WatchList" hx-trigger="load" hx-swap="outerHTML" class="htmx-indicator" src="../spinner.gif" height="30" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>